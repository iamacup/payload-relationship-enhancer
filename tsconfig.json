{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "paths": {
      "payload/generated-types": ["./dev/payload-types.ts"]
    },
    "types": ["bun-types"]
  },
  "include": ["src", "dev"],
  "exclude": ["node_modules", "dist", "build"]
}
