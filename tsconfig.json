{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "paths": {
      "payload/generated-types": ["./dev/payload-types.ts"]
    },
    "types": ["bun-types"]
  },
  "include": ["src", "dev"],
  "exclude": ["node_modules", "dist", "build"]
}
